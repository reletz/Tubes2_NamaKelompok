{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd src/frontend && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "cd src/frontend && npx serve -s build",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
